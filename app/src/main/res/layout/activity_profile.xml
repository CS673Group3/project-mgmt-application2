<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bryan.teamproject.ProfileActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:textSize="30sp"
        android:id="@+id/profile_greeting_msg_txtView" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/service1"
        android:id="@+id/requirement_tracker_btn"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="20sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/service2"
        android:id="@+id/com_tool_btn"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/requirement_tracker_btn"
        android:layout_alignLeft="@+id/requirement_tracker_btn"
        android:layout_alignStart="@+id/requirement_tracker_btn"
        android:textSize="20sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/service3"
        android:id="@+id/issue_tracker_btn"
        android:layout_below="@+id/com_tool_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:textSize="20sp" />
</RelativeLayout>
